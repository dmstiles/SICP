;; Definitions:
(define tolerance 0.00001)
;Value: tolerance

(define (fixed-point f first-guess)
  (define (close-enough? v1 v2)
    (< (abs (- v1 v2)) tolerance))
  (define (try guess)
    (display guess)
    (newline)
    (let ((next (f guess)))
    (if (close-enough? guess next)
	next
	(try next))))
  (try first-guess))
;Value: fixed-point

(define (average x y)
  (/ (+ x y) 2))
